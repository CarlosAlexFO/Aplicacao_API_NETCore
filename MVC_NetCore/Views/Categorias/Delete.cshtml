@model MVC_NetCore.Models.Categoria

@{
    ViewData["Title"] = "Excluir";
}

<h1> @ViewData["Title"]</h1>
  
    <dv class="alert"><h3>
        Deseja realmente excluir a @Html.DisplayFor(model => model.Descricao)?
        </h3>
    </dv>
    <div>
        <hr />
        <h4>Categoria</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary">Voltar Lista</a>
        </form>
    </div>
